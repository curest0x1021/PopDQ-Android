<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridView
        android:id="@+id/gv_galery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azstack_background_app"
        android:fadingEdgeLength="0dp"
        android:numColumns="2"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"></GridView>

    <RelativeLayout
        android:layout_width="@dimen/azstack_actionbar_height"
        android:layout_height="@dimen/azstack_actionbar_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/azstack_margin_small"
        android:background="@drawable/azstack_bg_circle"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_numselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/azstack_app_color"
            android:textSize="@dimen/azstack_text_content"
            android:textStyle="normal" />
    </RelativeLayout>

</RelativeLayout>