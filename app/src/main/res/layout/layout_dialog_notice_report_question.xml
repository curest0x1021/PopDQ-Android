<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_convert_credit"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <com.popdq.app.view.textview.TextViewNormal
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:text="@string/report_title_question"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_large"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/main_login"></View>
        </RelativeLayout>

        <com.popdq.app.view.textview.TextViewNormal
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/report_description"
            android:textSize="@dimen/textsize_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">


                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@drawable/btn_checkbox_buy_credit"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/report_list_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/main_login"></View>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:button="@drawable/btn_checkbox_buy_credit"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/report_list_2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/main_login"></View>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:button="@drawable/btn_checkbox_buy_credit"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="@string/report_list_3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/main_login"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/btn_checkbox_buy_credit"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:text="@string/report_list_4"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize_normal" />

                    <EditText
                        android:inputType="textCapSentences"
                        android:id="@+id/edtMessageReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_report_others"
                        android:hint="@string/hint_report_others"
                        android:maxLength="100"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/textsize_normal" />


                </LinearLayout>

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button_login_input"
                android:layout_above="@+id/bottom"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_signup"
                android:text="@string/cancel"
                android:textColor="@drawable/text_color_sign_up"
                android:textSize="@dimen/textsize_normal" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button_login_input"
                android:layout_above="@+id/bottom"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_login"
                android:text="@string/report"
                android:textColor="@drawable/text_color_login"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>