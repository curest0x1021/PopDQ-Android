<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.popdq.app.ui.LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <LinearLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <include
            android:id="@+id/logo"
            layout="@layout/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"></include>

        <com.popdq.app.view.textview.TextViewNormal
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/description_login"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_normal" />

        <include layout="@layout/option"></include>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/option">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"

            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnLoginWithFb"
                android:layout_width="@dimen/width_button_login"
                android:layout_height="wrap_content"
                android:background="@drawable/button_login_fb"
                android:orientation="horizontal"
                android:padding="@dimen/pading_login_button">

                <com.popdq.app.view.textview.TextViewNormal

                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="F"
                    android:textColor="@drawable/text_color_login"
                    android:textSize="@dimen/textsize_buton_login"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/btn_view_divider_vertical"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.popdq.app.view.textview.TextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_fb"
                        android:textColor="@drawable/text_color_login"
                        android:textSize="@dimen/textsize_buton_login"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLoginWithGoogle"
                android:layout_width="@dimen/width_button_login"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_login_google"
                android:orientation="horizontal"
                android:padding="@dimen/pading_login_button">

                <com.popdq.app.view.textview.TextViewNormal

                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="G+"
                    android:textColor="@drawable/text_color_login"
                    android:textSize="@dimen/textsize_buton_login"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/btn_view_divider_vertical"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.popdq.app.view.textview.TextViewNormal

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_google"
                        android:textColor="@drawable/text_color_login"
                        android:textSize="@dimen/textsize_buton_login"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLoginWithEmail"
                android:layout_width="@dimen/width_button_login"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_login_email"
                android:orientation="horizontal"
                android:padding="@dimen/pading_login_button">

                <com.popdq.app.view.textview.TextViewNormal

                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="E"
                    android:textColor="@drawable/text_color_login"
                    android:textSize="@dimen/textsize_buton_login"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/btn_view_divider_vertical"></View>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.popdq.app.view.textview.TextViewNormal


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_email"
                        android:textColor="@drawable/text_color_login"
                        android:textSize="@dimen/textsize_buton_login"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <com.popdq.app.view.textview.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/have_an_account"
                    android:textColor="@color/text_solved_static"
                    android:textSize="@dimen/textsize_normal" />

                <com.popdq.app.view.textview.TextViewBold
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:text="@string/login_up"
                    android:textColor="@drawable/text_color_sign_up_text"
                    android:textSize="@dimen/textsize_normal"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
