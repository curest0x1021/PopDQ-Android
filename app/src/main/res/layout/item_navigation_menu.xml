<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/ic_menu_size"
            android:layout_height="@dimen/ic_menu_size"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/my_question_icon" />

        <com.popdq.app.view.textview.TextViewNormal
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_question"
            android:textColor="@drawable/text_color_view_all"
            android:textSize="@dimen/textsize_normal"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_menu"></View>
</LinearLayout>